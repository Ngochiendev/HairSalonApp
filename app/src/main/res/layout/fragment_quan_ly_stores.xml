<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Fragment.User.CategoryFragment">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_42px"
            android:background="@color/yellow" />

        <TextView
            android:id="@+id/toolbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_42px"
            android:layout_centerHorizontal="true"
            android:background="@color/yellow"
            android:gravity="center"
            android:text="Chi nhánh cửa hàng"
            android:textColor="@color/black_100"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivAddStore"
            android:layout_width="@dimen/dimen_42px"
            android:layout_height="@dimen/dimen_42px"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-1dp"
            android:padding="@dimen/dimen_16px"
            android:src="@drawable/ic_black_plus" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvStore"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="15dp"
            android:horizontalSpacing="5dp"
            android:numColumns="2"
            android:verticalSpacing="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    </RelativeLayout>

</layout>